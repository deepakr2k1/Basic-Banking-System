<!doctype html>
<html lang="en">

<%-include('./partials/head')%>

    <body>

        <%-include('./partials/nav')%>

            <div id="content">
                <% if(user.email == null || user.email == "") { %>
                    <h4>Please Login or register if you don't have account</h4>
                    <% } else { %>
                        <div id="available_balance">
                            <h2>Available Balance</h2>
                            <h4>
                                Rs.
                                <%- user.balance %>
                            </h4>
                        </div>

                        <div id="icons_div">
                            <a href="/pay">
                                <div class="icons" id="icon1">
                                    <h3>Pay</h3>
                                    <p>Transfer Money to your friends/Relative</p>
                                </div>
                            </a>
                            <a href="/history/<%- user.email %>">
                                <div class="icons" id="icon2">
                                    <h3>History</h3>
                                    <p>Get your all transaction History here</p>
                                </div>
                            </a>
                        </div>
                        <% } %>
            </div>

            <!-- Optional JavaScript; choose one of the two! -->

            <!-- Option 1: Bootstrap Bundle with Popper -->
